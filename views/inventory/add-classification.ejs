<%- include("../partials/head", { title: title, cssFile: "/css/inventory-management.css" }) %>


<main>
  <h1>Add Vehicle Classification</h1>

  <% if (notice && notice.length > 0) { %>
    <div class="notice"><%= notice %></div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <div class="errors">
      <ul>
        <% errors.forEach(err => { %>
          <li><%= err.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/inv/add-classification" method="post" id="addClassificationForm">
    <p>The classification name cannot contain spaces or special characters.</p>

    <label for="classification_name">Classification Name</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="^[A-Za-z0-9]+$"
      value="<%= classification_name || '' %>"
    >

    <button type="submit">Add Classification</button>
  </form>
</main>

<%- include('../partials/footer') %>
