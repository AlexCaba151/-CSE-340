<%- include("../partials/head", { title: title, cssFile: "/css/inventory-management.css" }) %>

<main>
  <h1>Vehicle Management</h1>

  <% if (notice && notice.length > 0) { %>
    <div class="notice"><%= notice %></div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <div class="errors">
      <ul>
        <% errors.forEach(err => { %>
          <li><%= err.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <p>Use the options below to manage vehicle classifications and inventory.</p>

  <ul class="inv-links">
    <li><a href="/inv/add-classification">Add New Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
  </ul>
</main>

<%- include('../partials/footer') %>
